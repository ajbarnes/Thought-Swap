{
  "author": "VT-CHCI",
  "name": "thought-swap-client",
  "homepage": "http://thoughtswap.cs.vt.edu/",
  "version": "2.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/VT-CHCI/Thought-Swap.git"
  },
  "private": true,
  "proxy": {
    "/api/*": {
      "target": "http://localhost:5000"
    }
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4"
  },
  "devDependencies": {
    "concurrently": "^3.6.0",
    "cypress": "^3.0.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!/node_modules/",
      "!src/index.js",
      "!src/registerServiceWorker.js"
    ]
  },
  "scripts": {
    "start": "sass --watch src/styles/scss:src/styles/css | react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --coverage",
    "e2e": "concurrently \"npm run dev --prefix ../server\" \"cypress open\"",
    "eject": "react-scripts eject"
  }
}
